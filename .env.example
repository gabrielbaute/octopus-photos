# --- Datos Base ---
APP_NAME=OctopusPhotos
APP_URL=http://localhost:8000

# --- API ---
# Usa 127.0.0.1 para desarrollo local. 
# Usa 0.0.0.0 si vas a correrlo en un contenedor o servidor accesible en red local.
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=True
API_LOG_LEVEL=info

# --- Seguridad (OBLIGATORIO CONFIGURAR) ---
# Puedes generar llaves seguras con: openssl rand -hex 32
SECRET_KEY=tu_secret_key_super_secreta_aqui
SECURITY_PASSWORD_SALT=tu_salt_para_passwords
JWT_SECRET_KEY=tu_jwt_secret_key_aqui
ALGORITHM=HS256

# --- Tiempos de Expiración (minutos) ---
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 días

# --- Configuración de Correo ---
MAIL_HOST=smtp.google.com
MAIL_PORT=587
MAIL_USERNAME=gabrielbaute@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# --- Base de Datos ---
DATABASE_ECHO=False